<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--一个servlet两个标签-->
    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>com.hope.service.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>http</servlet-name>
        <servlet-class>com.hope.service.HttpServletDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>http</servlet-name>
        <url-pattern>/httpdemo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>http2</servlet-name>
        <servlet-class>com.hope.service.HttpServletDemo2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>http2</servlet-name>
        <url-pattern>/httpdemo2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>com.hope.service.GetParameterServletDemo1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/getparameter</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>love</servlet-name>
        <servlet-class>com.hope.service.LoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>love</servlet-name>
        <url-pattern>/love</url-pattern>
    </servlet-mapping>
</web-app>